<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circleImageViewShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="cardElevation">50dp</item>
    </style>

    <style name="textBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/textBoxHeight</item>
        <item name="android:layout_marginStart">@dimen/common_margin</item>
        <item name="android:layout_marginEnd">@dimen/common_margin</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">@dimen/common_margin</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="passwordBox" parent="textBox">
<!--        <item name="android:drawableEnd">@drawable/show_password</item>-->
        <item name="android:hint">@string/hint_password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_common</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/common_margin</item>
        <item name="android:layout_marginEnd">@dimen/common_margin</item>
        <item name="android:textSize">@dimen/textSize_common</item>
        <item name="android:backgroundTint">@color/vassBlue</item>
        <item name="android:textColor">@color/blacknWhite</item>
    </style>

    <style name="menuOverflowToolbar" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="passwordCheckBox">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:backgroundTint">@color/darker_text</item>
        <item name="android:background">@drawable/show_passwd_check_box</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="passwordRequirements">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/edit_text_error_white_background</item>
        <item name="android:textColor">@color/statusOffline</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:paddingBottom">60dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="toggleBtnLists">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/toggle_btn_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>